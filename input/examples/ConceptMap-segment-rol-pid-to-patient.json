{
  "resourceType": "ConceptMap",
  "id": "segment-rol-pid-to-patient",
  "description": "This ConceptMap represents the mapping from the HL7 V2 ROL!PID Segment to the FHIR Patient Resource representing that segment.",
  "url": "http://hl7.org/fhir/v2-tofhir",
  "version": "1.0",
  "name": "Segment_ROL!PID_Map",
  "status": "active",
  "experimental": true,
